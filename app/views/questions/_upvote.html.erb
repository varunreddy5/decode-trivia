<%= link_to upvote_question_path(question), class: "upvote #{'voted' if current_user.voted_up_on?(question)}", method: :put, remote: true do %>
  <svg fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24" class="upvote-button"><path d="M5 15l7-7 7 7"></path></svg>
  <span class="vote-count"><%= question.get_upvotes.size %></span>
<% end%>
